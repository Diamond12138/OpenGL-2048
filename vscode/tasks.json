{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++.exe build active file",
            "command": "E:\\mingw64\\bin\\g++.exe",
            "args": [
                "-finput-charset=UTF-8",
                "-fexec-charset=gbk",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe",
                "-lgdi32",
                "-lopengl32",
                "-lsfml-audio",
                "-lsfml-graphics",
                "-lsfml-network",
                "-lsfml-system",
                "-lsfml-window",
                "-lfreeglut",
                "-lglu32",
                "-lglew32",
                "-lglfw3"
            ],
            "options": {
                "cwd": "E:\\mingw64\\bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}